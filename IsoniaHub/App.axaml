<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

			 xmlns:local="clr-namespace:IsoniaHub"
			 xmlns:Projects="clr-namespace:IsoniaHub.Projects"
			 xmlns:Editors="clr-namespace:IsoniaHub.Editors"

			 x:CompileBindings="True"
			 x:Class="IsoniaHub.App">
    <Application.Styles>
		<SimpleTheme />
		<StyleInclude Source="avares://IsoniaCore/Resources/Controls.axaml" />
	</Application.Styles>
	
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="avares://IsoniaCore/Resources/Accents.axaml" />
				<ResourceInclude Source="avares://IsoniaCore/Resources/Converters.axaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

	<Application.DataTemplates>
		<DataTemplate DataType="{x:Type Projects:ProjectsViewModel}">
			<Projects:ProjectsView/>
		</DataTemplate>
		<DataTemplate DataType="{x:Type Editors:EditorsViewModel}">
			<Editors:EditorsView/>
		</DataTemplate>
	</Application.DataTemplates>
</Application>