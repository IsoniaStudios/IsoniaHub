		WindowStartupLocation="CenterScreen"

		Title="Isonia Hub">

	<DockPanel LastChildFill="True">
		<Border Width="240" BorderBrush="Wheat" BorderThickness="0" DockPanel.Dock="Left">
			<!--<TextBlock>red</TextBlock>-->
		</Border>
		<Border BorderBrush="Wheat" BorderThickness="0">
			<!--<TextBlock>red</TextBlock>-->
		</Border>
	</DockPanel>

</Window>
